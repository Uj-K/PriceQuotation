@model PriceQuotation

@{
    ViewData["Title"] = "Price Quotation";
}


<h2>Price Quotation</h2>

<form asp-action="Index" method="post">
    <div>
        <label asp-for="Subtotal"></label>
        <input asp-for="Subtotal" />
        <span asp-validation-for="Subtotal" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="DiscountPercent"></label>
        <input asp-for="DiscountPercent" />
        <span asp-validation-for="DiscountPercent" class="text-danger"></span>
    </div>
    <div>
        <button type="submit">Calculate</button>
        <a asp-action="Index">Clear</a>
    </div>
</form>

@if (Model != null)
{
    <div>
        <p>Discount Amount: @Model.DiscountAmount.ToString("C")</p>
        <p>Total: @Model.Total.ToString("C")</p>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}