@model PriceQuotation

@{
    ViewData["Title"] = "Price Quotation";
}


<h2>Price Quotation</h2>

<form asp-action="Index" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div>
        <label asp-for="Subtotal">Subtotal: </label>
        <input asp-for="Subtotal" />
        <span asp-validation-for="Subtotal" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="DiscountPercent">Discount Percent: </label>
        <input asp-for="DiscountPercent" />
        <span asp-validation-for="DiscountPercent" class="text-danger"></span>
    </div>

 
    @if (Model != null)
    {
        <div>
            <p>Discount Amount: @Model.DiscountAmount.ToString("C2")</p>
            <p>Total: @Model.Total.ToString("C2")</p>
        </div>
    }

    <div>
        <button type="submit">Calculate</button>
        <a asp-action="Index">Clear</a>
    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />

    }